@model Proje.Northwind.MvcWeb.Models.ProductListViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}
<div class="col-md-12">
    <h2>Product List</h2>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4-4.1.1/jq-3.3.1/dt-1.10.18/af-2.3.3/b-1.5.6/cr-1.5.0/fc-3.2.5/fh-3.1.4/kt-2.5.0/r-2.2.2/rg-1.1.0/rr-1.2.4/sc-2.0.0/sl-1.3.0/datatables.min.css" />
    <a class="btn btn-xs btn-success" style="margin-bottom:1%" asp-controller="Admin"
       asp-action="Add">Add a new product</a>
</div>

<div class="col-md-12">
    <table class="table table-striped table table-hover" id="myTable" width="100%" >
        <thead>
            <tr>
                <td class="font-weight-bolder">Product Name</td>
                <td class="font-weight-bolder">Unit Price</td>
                <td class="font-weight-bolder">Units In Stock</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.UnitPrice</td>
                    <td>@product.UnitsInStock</td>
                    <td>
                        <a class="btn btn-xs btn-info" asp-controller="Admin"
                           asp-action="Update" asp-route-productId="@product.ProductId">Update</a>
                        <a class="btn btn-xs btn-danger" asp-controller="Admin"
                           asp-action="Delete" asp-route-productId="@product.ProductId">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4-4.1.1/jq-3.3.1/dt-1.10.18/af-2.3.3/b-1.5.6/cr-1.5.0/fc-3.2.5/fh-3.1.4/kt-2.5.0/r-2.2.2/rg-1.1.0/rr-1.2.4/sc-2.0.0/sl-1.3.0/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                language: { url: "//cdn.datatables.net/plug-ins/1.10.19/i18n/Turkish.json" },
                responsive: true,
                colReorder: true,

            });

        });
    </script>

}

